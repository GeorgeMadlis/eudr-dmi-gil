{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/schemas/reports/aoi_report_v2.schema.json",
  "title": "AOI Report v2",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "report_version",
    "generated_at_utc",
    "bundle_id",
    "report_metadata",
    "aoi_id",
    "aoi_geometry_ref",
    "inputs",
    "metrics",
    "evidence_artifacts",
    "evidence_registry",
    "acceptance_criteria",
    "regulatory_traceability",
    "assumptions",
    "policy_mapping_refs",
    "parameters",
    "datasets",
    "policy_mapping",
    "results_summary"
  ],
  "properties": {
    "report_version": {
      "type": "string",
      "enum": ["aoi_report_v2"],
      "description": "Versioned report contract identifier."
    },
    "generated_at_utc": {
      "type": "string",
      "format": "date-time",
      "description": "UTC ISO-8601 timestamp for when this report JSON was generated."
    },
    "bundle_id": {
      "type": "string",
      "minLength": 1
    },
    "report_metadata": {
      "type": "object",
      "additionalProperties": false,
      "required": ["report_type", "regulatory_context", "assessment_capability"],
      "properties": {
        "report_type": {
          "type": "string",
          "enum": ["example", "production", "test"]
        },
        "regulatory_context": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "regulation",
            "in_scope_articles",
            "out_of_scope_articles"
          ],
          "properties": {
            "regulation": {
              "type": "string",
              "enum": ["EUDR"]
            },
            "in_scope_articles": {
              "type": "array",
              "items": { "type": "string" }
            },
            "out_of_scope_articles": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "assessment_capability": {
          "type": "string",
          "enum": ["inspectable_only", "assessable"]
        }
      }
    },
    "aoi_id": {
      "type": "string",
      "minLength": 1
    },
    "aoi_geometry_ref": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "value"],
      "properties": {
        "kind": {
          "type": "string",
          "enum": ["uri", "wkt", "geojson", "dataset_feature"],
          "description": "How to interpret `value`."
        },
        "value": {
          "type": "string",
          "minLength": 1
        },
        "sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$",
          "description": "Optional hash of an external geometry artifact when applicable."
        }
      }
    },
    "inputs": {
      "type": "object",
      "additionalProperties": false,
      "required": ["sources"],
      "properties": {
        "sources": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["source_id"],
            "properties": {
              "source_id": { "type": "string", "minLength": 1 },
              "version": { "type": "string" },
              "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
              "uri": { "type": "string" },
              "content_type": { "type": "string" }
            }
          }
        }
      }
    },
    "external_dependencies": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "dependency_id",
          "dataset_version",
          "tile_source",
          "aoi_geojson_sha256",
          "tiles_manifest",
          "tiles_used"
        ],
        "properties": {
          "dependency_id": { "type": "string", "minLength": 1 },
          "dataset_version": { "type": "string", "minLength": 1 },
          "tile_source": { "type": "string", "minLength": 1 },
          "aoi_geojson_sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
          "tiles_manifest": {
            "type": "object",
            "additionalProperties": false,
            "required": ["relpath", "sha256"],
            "properties": {
              "relpath": { "type": "string", "minLength": 1 },
              "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
            }
          },
          "tiles_used": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "tile_id",
                "layer",
                "local_path",
                "sha256",
                "size_bytes",
                "source_url"
              ],
              "properties": {
                "tile_id": { "type": "string", "minLength": 1 },
                "layer": { "type": "string", "minLength": 1 },
                "local_path": { "type": "string", "minLength": 1 },
                "sha256": { "type": "string" },
                "size_bytes": { "type": "integer", "minimum": 0 },
                "source_url": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "metrics": {
      "type": "object",
      "description": "Metric key/value pairs with units.",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "required": ["value", "unit"],
        "properties": {
          "value": { "type": ["number", "integer", "string", "boolean", "null"] },
          "unit": { "type": "string", "minLength": 1 },
          "notes": { "type": "string" }
        }
      }
    },
    "evidence_artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["relpath", "sha256"],
        "properties": {
          "relpath": { "type": "string", "minLength": 1 },
          "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
          "size_bytes": { "type": "integer", "minimum": 0 },
          "content_type": { "type": "string" },
          "meta": { "type": "object" }
        }
      }
    },
    "evidence_registry": {
      "type": "object",
      "additionalProperties": false,
      "required": ["evidence_classes"],
      "properties": {
        "evidence_classes": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["class_id", "mandatory", "status"],
            "properties": {
              "class_id": { "type": "string", "minLength": 1 },
              "mandatory": { "type": "boolean" },
              "status": { "type": "string", "enum": ["missing", "partial", "present"] }
            }
          }
        }
      }
    },
    "acceptance_criteria": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["criteria_id", "description", "evidence_classes", "decision_type"],
        "properties": {
          "criteria_id": { "type": "string", "minLength": 1 },
          "description": { "type": "string", "minLength": 1 },
          "evidence_classes": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "minLength": 1 }
          },
          "decision_type": { "type": "string", "minLength": 1 }
        }
      }
    },
    "results": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": ["result_id", "criteria_ids"],
        "properties": {
          "result_id": { "type": "string", "minLength": 1 },
          "criteria_ids": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "minLength": 1 }
          },
          "evidence_classes": {
            "type": "array",
            "items": { "type": "string" }
          },
          "status": { "type": "string" }
        }
      }
    },
    "assumptions": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["assumption_id", "description", "testable", "affects_results"],
        "properties": {
          "assumption_id": { "type": "string", "minLength": 1 },
          "description": { "type": "string", "minLength": 1 },
          "testable": { "type": "boolean" },
          "affects_results": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
          }
        }
      }
    },
    "computed": { "type": "object" },
    "computed_outputs": { "type": "object" },
    "validation": { "type": "object" },
    "methodology": { "type": "object" },
    "regulatory_traceability": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["regulation"],
        "properties": {
          "regulation": { "type": "string", "minLength": 1 },
          "article_ref": { "type": "string" },
          "evidence_class": { "type": "string" },
          "acceptance_criteria": { "type": "string" },
          "result_ref": { "type": "string" }
        }
      }
    },
    "policy_mapping_refs": {
      "type": "array",
      "items": { "type": "string" }
    },
    "parameters": {
      "type": "object",
      "additionalProperties": true
    },
    "datasets": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["dataset_id", "retrieved_at_utc", "license"],
        "properties": {
          "dataset_id": { "type": "string", "minLength": 1 },
          "version": { "type": "string" },
          "retrieved_at_utc": { "type": "string", "format": "date-time" },
          "license": { "type": "string", "minLength": 1 },
          "source_url": { "type": "string" }
        }
      }
    },
    "policy_mapping": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["article_ref", "requirement", "evidence_fields", "artifact_relpaths", "status"],
        "properties": {
          "article_ref": { "type": "string", "minLength": 1 },
          "requirement": { "type": "string", "minLength": 1 },
          "evidence_fields": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "minLength": 1 }
          },
          "artifact_relpaths": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "minLength": 1 }
          },
          "status": { "type": "string", "enum": ["pass", "fail", "na"] }
        }
      }
    },
    "results_summary": {
      "type": "object",
      "additionalProperties": false,
      "required": ["aoi_area"],
      "properties": {
        "aoi_area": {
          "type": "object",
          "additionalProperties": false,
          "required": ["area_ha", "method"],
          "properties": {
            "area_ha": { "type": "number" },
            "method": { "type": "string", "minLength": 1 }
          }
        },
        "deforestation_free_post_2020": {
          "type": "object",
          "additionalProperties": false,
          "required": ["forest_loss_post_2020_ha", "percent_of_aoi", "threshold_ha", "status", "uncertainty"],
          "properties": {
            "forest_loss_post_2020_ha": { "type": "number" },
            "percent_of_aoi": { "type": "number" },
            "threshold_ha": { "type": "number" },
            "status": { "type": "string", "enum": ["pass", "fail", "na"] },
            "uncertainty": {
              "type": "object",
              "additionalProperties": false,
              "required": ["pixel_area_method", "nodata", "projection", "conservative_bounds"],
              "properties": {
                "pixel_area_method": { "type": "string" },
                "nodata": { "type": "string" },
                "projection": { "type": "string" },
                "conservative_bounds": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "extensions": { "type": "object" }
  }
}
